<script>
	$.fn.tabs=function() {
		var b=this;this.each(function()  {
			var a=$(this);
			$(a.attr("href")).hide();
			$(a).click(function() {
				$(b).removeClass("selected");
				$(b).each(function(b,a){
					$($(a).attr("href")).hide()
				});
				$(this).addClass("selected");
				$($(this).attr("href")).show();
				return!1
			});
		});
		$(this).show();
		$(this).first().click();
	}
	{% if selected_module_id is defined %}
		$('#tab_module_{{ selected_module_id }}').show();
		$('a.tab_module_{{ selected_module_id }}').click();
	{% else %}
		$('#tab_module_1').show();
		$('#a_tab_module_1').click();
	{% endif %}

</script>
